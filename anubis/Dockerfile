# anubis/Dockerfile
FROM ghcr.io/techarohq/anubis:latest

ARG ANUBIS_POLICY_TARGET_DIR=/etc/anubis
ARG ANUBIS_POLICY_FILENAME=botPolicy.json
ARG APP_USER_ID=1000
ARG APP_GROUP_ID=1000

COPY --chown=${APP_USER_ID}:${APP_GROUP_ID} botPolicy.json ${ANUBIS_POLICY_TARGET_DIR}/${ANUBIS_POLICY_FILENAME}

ENV POLICY_FNAME=${ANUBIS_POLICY_TARGET_DIR}/${ANUBIS_POLICY_FILENAME}